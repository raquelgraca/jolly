
  <div id="appointments">
    <div  class="card-columns">
      <% @appointments.each do |appointment|%>
        <div class="card" id="appointment-id-<%= appointment.id %>">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                      <%= cl_image_tag appointment.photos.first.key, :class => "d-block w-100" %>
                  </div>
                  <% appointment.photos.each do |photo| %>
                    <% if photo != appointment.photos.first %>
                      <div class="carousel-item">
                        <%= cl_image_tag photo.key, :class => "d-block w-100" %>
                      </div>
                    <% end %>
                  <% end %>
                </div>

              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          <div class="card-infos">
            <div>
              <p> minimum capacity <%= appointment.minimum_capacity %> maximum capacity <%= appointment.maximum_capacity %> starts at <%= appointment.start_time %> and finish at <%= appointment.end_time %>  </p>
            </div>
            <%= link_to 'Booking Now!', appointment_path(appointment.id), class: 'btn btn-warning' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
