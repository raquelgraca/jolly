<%= simple_form_for(@play_space) do |f| %>
  <%= f.error_notification %>
  <%= f.input :facilities %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <% if params[:action] == "edit" %>
    <%= f.submit t(".update") {@play_space.address.name} %>
  <% else %>
    <%= f.submit t(".addplayspace"), class: "mb-4" %>
  <% end %>
<% end %>

