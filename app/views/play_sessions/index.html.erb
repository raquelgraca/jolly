
<div class="container m-auto">
  <%= simple_form_for :search, url: play_sessions_path, method: "GET" do |f| %>
    <div class="bottom d-flex justify-content-between align-items-center">
      <p> Find a play session for your kid:</p>

      <%= f.input :time, required: false, as: :datetime, html5: true %>
      <%= f.input :hood, required: false %>
      <%= f.submit "Filter"%>
      <%= link_to 'Reset', play_sessions_path %>
    </div>
  <% end %>
    <div class ="cards">
      <% @play_sessions.each do |play_session| %>
        <%= link_to play_session_path(play_session) do %>
        <div class="card" >
          <div class="card-header", style="background: url(<%= cl_image_path play_session.photo.key %>) no-repeat;">
            <h2> <%= play_session.name.capitalize %> </h2>
          </div>
            <div class="card-infos">
              <div class="card-details">
                <p> <i class="far fa-clock"></i> <%= play_session.appointment.start_time %> </p>
                <p>  <i class="fas fa-map-pin"></i> <%= play_session.appointment.play_space.neighbourhood %> </p>
              </div>
              <%= cl_image_tag play_session.user.avatar.key, class: "play-session-provider-avatar-bordered" %>
              <h3> R$<%= play_session.sum_fee %></h3>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
