
<%= simple_form_for :search, url: play_sessions_path, method: "GET" do |f| %>
<div class="bottom d-flex justify-content-between align-items-center">
  <p> Find a play session for your kid:</p>
      <%= f.input :time, required: false, as: :datetime, html5: true %>
      <%= f.input :hood, required: false %>
      <%= f.submit "Filter"%>
      <%= link_to 'Reset', play_sessions_path %>
  <% end %>
</div>

<% @play_sessions.each do |play_session| %>
  <div class="card" >
    <%= cl_image_tag play_session.photo.key %>
    <h2> <%= play_session.name.capitalize %> </h2>
    <h3> Provided by <%= play_session.user.first_name %> <%= cl_image_tag  play_session.user.avatar.key %> </h3>
    <h4> in <%= play_session.appointment.play_space.neighbourhood %> </h4>
    <p> This play session takes place on <%= play_session.appointment.start_time %></p>
    <p>Requirements: <%= play_session.requirements %></p>
    <p>Status: <%= play_session.status %></p>
  </div>
<% end %>

