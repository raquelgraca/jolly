<div class="container m-6">
<h1>Create an appointment for <%= @play_space.name %></h1>
<p>This appointment will be available for recreation workers offer playsessions in your space.</p>
<%= simple_form_for [@play_space, @appointment] do |f| %>
  <%= f.error_notification %>

  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :minimum_capacity %>
  <%= f.input :maximum_capacity %>
  <%= f.input :owner_fee_per_kid_cents, label: 'Your fee per kid' %>
  <%= f.submit "Submit" %>
<% end %>
</div>
