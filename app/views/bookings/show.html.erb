<div class="container m-6">
    <div class="card p-4">
      <h2 class="text-center"> Dear <%= @booking.user.first_name.capitalize %> </h2>
      <h1 class="text-center"> Thank you for your booking </h1>
      <div class="text-center"><i class="far fa-check-circle"></i></div>
     <div class="info-booking">
    <p><%= @booking.play_session.description %></p>
    <br>
    <p> The requirements for this booking: <%= @booking.play_session.requirements %></p>
    <p> Time: <%= @booking.play_session.appointment.start_time %> - <%= @booking.play_session.appointment.end_time %></p>
    <p> Location: <%= @booking.play_session.appointment.play_space.street %> <%= @booking.play_session.appointment.play_space.street_number %> <%= @booking.play_session.appointment.play_space.neighbourhood %> </p>
    <p> Cost: <%= @booking.play_session.worker_fee_per_kid_cents %></p>
    <p> Capacity: <%= @booking.play_session.appointment.minimum_capacity %> - <%= @booking.play_session.appointment.maximum_capacity %> kids </p>
    <p> Provided by: <%= @booking.play_session.user.first_name %> </p>
  </div>
  </div>
