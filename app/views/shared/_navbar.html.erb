<!-- LE WAGON UI-KIT-NAVBAR -->
<div class="navbar navbar-expand-sm navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "Jolly-07.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if @current_user.role == 'play space owner' %>
          <li class="nav-item active">
            <%= link_to "New play space", new_play_space_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My play spaces", play_spaces_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if @current_user.role == 'recreation worker' %>
          <li class="nav-item active">
            <%= link_to "Available appointments", appointments_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Play Sessions", my_play_sessions_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if @current_user.role == 'parent' %>
          <li class="nav-item active">
            <%= link_to "Play sessions", play_sessions_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Bookings", bookings_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "Profile",edit_user_registration_path, class: "user-section nav-link" %>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "user-section nav-link" %>
          </li>
        <% end %>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
