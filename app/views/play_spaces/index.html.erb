<div class="container m-auto">
  <% @play_spaces.each do |play_space| %>
    <div class="card p-4">
      <div class="d-flex">
      <% play_space.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      </div>
      <h2 class="text-center mt-4"> <%= play_space.name.capitalize %> </h2>
      <div class="info-playspace">
        <p><%= play_space.street %>,<%= play_space.street_number %> - <%= play_space.neighbourhood %></p>
        <p><%= play_space.city %> - <%= play_space.state %> <%= play_space.zip_code %> </p>
        <p class="facilities-playspace"><%= play_space.facilities %></p>
       <%= link_to 'Offer this play space', "#", class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
