<div class="container m-6">
<h1 class="text-center">Play Session List</h1>

  <% if !@play_sessions.exists? %>
    <div class="m-6">
      <h3 class="text-left">There is not play spaces to book</h3>
      <%= link_to "List a play space", bookings_path, class: "btn btn-warning" %>
    </div>
  <% else %>
    <h3 class="text-left">Play Spaces for book</h3>
  <div class="card-columns">
    <% @play_spaces.each do | play_space |%>
      <div class="card">
        <% if play_space.sold %>

          <%= cl_image_tag play_space.photos.first.key, :style => "filter: grayscale(100%);" %>
          <div class="book-tag"> Booked </div>
        <% else %>
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                    <%= cl_image_tag play_space.photos.first.key, :class => "d-block w-100" %>
                  </div>
               <% play_space.photos.each do |photo| %>
                  <% if photo != play_space.photos.first %>
                    <div class="carousel-item">
                      <%= cl_image_tag play_space.key, :class => "d-block w-100" %>
                    </div>
                  <% end %>
                <% end %>
              </div>

            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <% end %>
        <div class="card-infos">
          <div>
            <p> <%= play_space_name %> is located at <%= play_space.play_space_neighbourhood %> , <%= play_space.street_number %> number <%= play_space.street %> street </p>
            <p> <%= play_space.city %> city <%= play_space.state %> state <%= play_space.zip_code %> zip code <%= play_space.facilities %> has facilities </p>

          </div>
          <div class="d-flex align-items-stretch flex-column">
          <%= link_to edit_play_space_path(play_space) do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to '#', method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
        </div>
      </div>
  <% end %>
</div>
<% end %>
