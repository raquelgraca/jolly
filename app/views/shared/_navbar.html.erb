<div class="navbar navbar-expand-sm">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "Jolly-07.png" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.role == 'play space owner' %>
          <li class="nav-item active">
            <%= link_to t("navbar.new_play_space"), new_play_space_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t("navbar.my_play_spaces"), play_spaces_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if current_user.role == 'recreation worker' %>
          <li class="nav-item active">
            <%= link_to t("navbar.avai_appoint"), appointments_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t("navbar.my_play_sessions"), my_play_sessions_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if current_user.role == 'parent' %>
          <li class="nav-item active">
            <%= link_to t("navbar.play_sessions"), play_sessions_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t("navbar.my_bookings"), bookings_path, class: "nav-link" %>
          </li>
        <% end %>
          <li>
            <%= link_to "Profile",user_path(current_user.id), class: "user-section nav-link" %>
          </li>
          <li>
            <%= link_to t("navbar.log_out"), destroy_user_session_path, method: :delete, class: "user-section nav-link" %>
          </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to t("navbar.login"), new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to t("navbar.sign_up"), new_user_registration_path, class: "nav-link" %>
        </li>
        <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-language"></i>      
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to 'English', root_path(locale: :en), class: "dropdown-item" %>
            <%= link_to 'Español', root_path(locale: :es), class: "dropdown-item" %>
            <%= link_to 'Português', root_path(locale: :pt), class: "dropdown-item" %>
        </div>
      </div>
      <% end %>
    </ul>
  </div>
</div>
