
<div style="background-size: cover; background-position: center; width: 100%;  height: 400px; background-image: url(<%= cl_image_path @play_session.photo.key %>)"> </div>
<div class="p-4">
  <h1 class="text-center pt-2"> <%= @play_session.name.capitalize %> </h1>
  <h2 class="text-center pt-2" ><%= @play_session.description %></h2>
  <p class="text-justify p-4"> The requirements for this play session are: <%= @play_session.requirements %></p>
  <div class="d-flex justify-content-between p-4">
    <div>
        <h2 class="pr-4"> Provided by: <%= @play_session.user.first_name %> </h2>
        <p class="pr-4"> <%= @play_session.user.bio %> </p>
    </div>
    <%= cl_image_tag @play_session.user.avatar.key, class:"avatar-bordered" %>
  </div>
  <div class="info-box p-4">
    <p> <i class="far fa-clock"></i> &nbsp; &nbsp; <%= @play_session.appointment.start_time.strftime("%d/%m/%Y - %H:%M") %> - <%= @play_session.appointment.end_time.strftime("%d/%m/%Y - %H:%M") %></p>
    <p> <i class="fas fa-map-pin"></i> &nbsp; &nbsp; <%= @play_session.appointment.play_space.street %> <%= @play_session.appointment.play_space.street_number %> <%= @play_session.appointment.play_space.neighbourhood %> </p>
    <p> <i class="fas fa-dollar-sign"></i> &nbsp; &nbsp; <%= @play_session.worker_fee_per_kid_cents %></p>
    <p> <i class="fas fa-child"></i> &nbsp; &nbsp; <%= @play_session.appointment.minimum_capacity %> - <%= @play_session.appointment.maximum_capacity %> kids </p>
  </div>
</div>



<div id="carouselExampleControls" class="carousel slide mb-4" data-ride="carousel">
<div class="carousel-inner">
  <div class="carousel-item active">
     <div style="background-size: cover; background-position: center; width: 100%;  height: 400px; background-image: url(<%= cl_image_path @play_session.appointment.play_space.photos.first.key %>)"> </div>
  </div>
  <% @play_session.appointment.play_space.photos.each do |photo| %>
    <% if photo != @play_session.appointment.play_space.photos.first %>
      <div class="carousel-item">
        <div style="background-size: cover; background-position: center; width: 100%;  height: 400px; background-image: url(<%= cl_image_path photo.key %>)"> </div>
      </div>
    <% end %>
  <% end %>
</div>
<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
</div>

