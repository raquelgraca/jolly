<%= simple_form_for [@address_holder, @address] do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, placeholder: "Please describe this address (e.g. 'home' or 'work')."%>
  <%= f.input :street %>
  <%= f.input :street_number %>
  <%= f.input :neighbourhood %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zip_code %>
  <% if params[:action] == "edit" %>
    <%= f.submit "Update #{@address.name}" %>
  <% else %>
    <%= f.submit "Add this address" %>
  <% end %>
<% end %>
